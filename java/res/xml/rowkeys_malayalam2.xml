<merge
    xmlns:latin="http://schemas.android.com/apk/res/in.androidtweak.inputmethod.indic"
>
    <switch>
        <case latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted"
        >

            <!-- അ -->
            <Key
                latin:keyLabel="&#x0D05;" />
            <!-- ഷ -->
            <Key
                latin:keyLabel="&#x0D37;" />
            <!-- ധ, ഢ -->
            <Key
                latin:keyLabel="&#x0D27;"
                latin:moreKeys="&#x0D22;"
                latin:keyHintLabel="&#x0D22;" />
            <!-- ഫ -->
            <Key
                latin:keyLabel="&#x0D2B;" />
            <!-- ഘ -->
            <Key
                latin:keyLabel="&#x0D1B;" />
            <!-- ഃ -->
            <Key
                latin:keyLabel="&#x0D03;" />
            <!-- ഝ -->
            <Key
                latin:keyLabel="&#x0D1D;" />
            <!-- ഖ -->
            <Key
                latin:keyLabel="&#x0D16;" />
            <!-- ള -->
            <Key
                latin:keyLabel="&#x0D33;" />
        </case>

        <default>
            <!-- ാ, ആ -->
            <Key
                latin:keyLabel="&#x0D3E;"
                latin:moreKeys="&#x0D06;"
                latin:keyHintLabel="&#x0D06;" />
            <!--സ -->
            <Key
                latin:keyLabel="&#x0D38;" />
            <!-- ദ, ഡ -->
            <Key
                latin:keyLabel="&#x0D26;"
                latin:moreKeys="&#x0D21;"
                latin:keyHintLabel="&#x0D21;" />
            <!-- ഫ -->
            <Key
                latin:keyLabel="&#x0D2B;" />
            <!-- ഗ -->
            <Key
                latin:keyLabel="&#x0D17;" />
            <!-- ഹ -->
            <Key
                latin:keyLabel="&#x0D39;" />
            <!-- ജ -->
            <Key
                latin:keyLabel="&#x0D1C;" />
            <!-- ക -->
            <Key
                latin:keyLabel="&#x0D15;" />
            <!-- ല -->
            <Key
                latin:keyLabel="&#x0D32;" />
         </default>
    </switch>
</merge>
